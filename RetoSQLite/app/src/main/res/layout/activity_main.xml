<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:layout_marginTop="20dp"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:fitsSystemWindows="true">


    <!-- 1. Título -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:text="Directorio de Empresas"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- 2. Subtítulo -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="Empresas de desarrollo de software"
        android:textColor="#4CAF50"
        android:textSize="16sp" />

    <!-- Filtro por nombre -->
    <EditText
        android:id="@+id/editTextNameFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:hint="Filtrar por nombre"
        android:inputType="text" />

    <!-- Filtro por clasificación -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clasificación:"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkBoxConsultoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consultoría"/>

        <CheckBox
            android:id="@+id/checkBoxDesarrollo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desarrollo a la medida"/>

        <CheckBox
            android:id="@+id/checkBoxFabrica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fábrica de software" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filtrar"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"/>

    <!-- 3. ListView, ocupa todo el espacio restante -->
    <ListView
        android:id="@+id/listViewCompanies"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"/>

</LinearLayout>